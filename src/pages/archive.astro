---
import BaseLayout from "../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("./posts/*.md");

const postsByYear = allPosts.reduce((acc, post) => {
  // 使用正确的 frontmatter 属性 pubDate
  const year = new Date(post.frontmatter.pubDate).getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {});

// Sort the object's keys by year in descending order
const years = Object.keys(postsByYear).sort((a, b) => Number(b) - Number(a)); // Descending sort

const title = "歸檔";
---

<BaseLayout title={title}>
  <div class="archive-list">
    <h1>歸檔</h1>
    <hr />
    {
      years.map((year) => (
        <div>
          <h2>
            {year} ( {postsByYear[year].length}篇博客 )
          </h2>

          <ul>
            {postsByYear[year].map((post) => (
              <li>
                <article>
                  <h3>
                    <a href={post.url}>{post.frontmatter.title}</a>
                  </h3>
                  <time datetime={post.frontmatter.pubDate}>
                    {new Date(post.frontmatter.pubDate).toLocaleDateString()}
                  </time>
                </article>
              </li>
            ))}
          </ul>
          <hr />
        </div>
      ))
    }
  </div>
</BaseLayout>

<style>
  .archive-list {
    margin: 35px 0 35px 0;
  }

  h1 {
    margin-bottom: 20px;
  }

  h3 a {
    font-size: 30px;
    font-weight: 500;
    font-style: normal;
    margin-bottom: 10px;
    line-height: 1.5em;
  }

  h1,
  h2,
  h3,
  time {
    padding: 0 35px 0 35px;
  }

  article {
    padding: 35px 0 35px 0;
  }

  article:hover {
    background-color: rgba(2, 11, 22, 0.03);
  }

  hr {
    margin: 0 35px 35px 35px;
  }

  li {
    list-style: none;
  }
</style>
